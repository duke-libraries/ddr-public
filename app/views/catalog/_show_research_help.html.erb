<% cache("show_research_help_#{document.id}", expires_in: 7.days) do %>
  <% research_help = get_research_help(document) %>
  <% if research_help %>
  <div class="buffer-bottom-40">
    <h4><span class="contact-devil-logo"></span><%= research_help_title(research_help) %></h4>

    <% if research_help.ask || research_help.email || research_help.phone %>

      <div class="dropdown">
        <a href="#" data-target="#" role="button" id="dLabel" data-toggle="dropdown" class="dropdown-toggle small text-uppercase text-muted" aria-haspopup="true" aria-expanded="false">Contact <span class="glyphicon glyphicon-menu-down"></span></a><br/>

         <ul class="dropdown-menu" aria-labelledby="dLabel">
          <% if research_help.ask %>
            <li><a href="<%= research_help.ask %>?&amp;referrer=<%= request.original_url %>" class="small text-muted"><span class="glyphicon glyphicon-comment text-muted" aria-hidden="true"></span> Ask a Question</a></li>
          <% end %>
          <% if research_help.phone %>
            <li><a href="tel:+1-<%= research_help.phone %>" class="small text-uppercase text-muted"><span class="glyphicon glyphicon-earphone text-muted" aria-hidden="true"></span> <%= research_help.phone %></a></li>
          <% end %>
        </ul>
      </div>


    <% end %>

  </div>
  <%- end %>
<%- end %>
