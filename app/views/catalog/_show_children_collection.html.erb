<hr/>

<%= link_to collection_browse_items_url(@document), :class => "" do %>
  <h3 class="feature-head">Items in This Collection <span class="text-muted smaller">(<%= number_with_delimiter(@item_count) %>)</span></h3>
<% end %>

<%# Show the first 6 items in a grid %>
<%= render_document_index_with_view("gallery", @children_item_documents[0..5]) %>

<% if @children_item_documents.length > 6 %>
  <p>
    <%= link_to collection_browse_items_url(@document), :class => "" do %>
      Browse all <%= number_with_delimiter(@item_count) %> Items &raquo;
    <% end %>
  </p>  
<% end %>

