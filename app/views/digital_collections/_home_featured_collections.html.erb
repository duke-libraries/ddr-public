<% unless @featured_collection_documents.nil? %>
  <h3 class="feature-head">Featured Collections</h3>

  <div class="row featured-collections">


    <%# TODO: Maybe use a tighter grid? Add arrows to make this a slider? %>
    <%# Call it "New & Featured"?  %>

      <% @featured_collection_documents.each_with_index do |doc, index| %>
        <div class="col-md-4">
          <a class="collection-thumb" href="<%= document_or_object_url(doc) %>" data-toggle="popover" data-content="<%= doc.abstract %>" data-placement="auto" style="background-image: url(<%= collection_thumbnail_image_path(doc) %>);">
            <div class="collection-caption"><%= doc.title %></div> 
          </a>
     
        </div>
      <% end %>

  </div>



<%- end %>
