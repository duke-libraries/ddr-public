<% cache("dc_show_collection_context_#{document.id}", expires_in: 7.days) do %>
  <div id="collection-context" class="buffer-bottom-40">
    <h4><%= link_to_document document.collection, document.collection.title, :id => "parent-collection" %></h4>
    <p class="small"><%= truncate(document.collection.abstract, :length => 180, :separator => ' ') %></p>
    <a class="text-muted text-uppercase small" id="more-digital-collections" href="http://library.duke.edu/digitalcollections">More Duke Digital Collections &raquo;</a>
  </div>
<% end %>
