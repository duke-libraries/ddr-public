<% if @collection_highlight_document_list %>
  <div class="row">
    <div class="col-md-12">
      <% if @collection_highlight_document_list %>
        <% @collection_highlight_document_list.sample(8).each_with_index do |doc, index| %>
          <% if doc.multires_image_file_path %>
            <div class="collection-highlight" id="collection-highlight-<%= index %>" style="background-image: url(<%= iiif_image_path(doc.multires_image_file_path, {:size => '!500,500', :region => 'pct:5,5,90,90' }) %>);">
              <% item = document_from_uri(doc['is_part_of_ssim'].first) %>

              <%= link_to_document item, "", :class => "highlight-item-wrap", :id => "showcase-item-link-"+index.to_s, data: { toggle: "fade-element", target_id: "highlight-item-caption-"+index.to_s } %>                 

              <div class="highlight-item-caption" id="highlight-item-caption-<%= index %>">
                <div style="position: absolute; bottom: 10px;"><small><%= item.title.truncate(50, separator: ' ') %> <small class="text-muted"><%= item.local_id %></small></small></div>
              </div>

            </div>
          <%-end %>
        <%- end %>
      <% end %>
    </div>
  </div>

<%- end %>
